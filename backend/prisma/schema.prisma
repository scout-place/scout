datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
}

model Waitlist {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullname  String   
  position  Int      @unique
  createdAt DateTime @default(now())
}
